<div class="container-fluid">
	<div class="row">
		<%= render "partials/notificaciones" %>
		<% @articulos.each do |articulo| %>
			<div class="col-sm-offset-1 col-sm-10 col-md-6 col-lg-4">
				<div class="jumbotron">
					<h1><%= link_to articulo.title, articulo %></h1>
					<p> <%= articulo.body %> </p>
					<%= link_to 'Editar', edit_article_path(articulo) , class:"btn btn-warning" %>
					<%= link_to "Eliminar #{articulo.title}", articulo, method: :delete, data: {confirm: "Â¿Estas seguro de eliminar este articulo?"}, class:"btn btn-danger" %>
				</div>
			</div>
		<% end %>
	</div>
</div>