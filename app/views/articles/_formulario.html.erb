<div class="container-fluid">
	<div class="row">
		<div class="col-md-8 offset-md-2">
			<div class="jumbotron">
				<form>
					<fieldset>
						<h1 class="text-center offset-md-2 col-md-8"><%= "#{titulo} Articulo" %></h1>
						<br>
						<%= form_with(model: @article) do |form| %>
							<div class="form-group row">
								<%= form.label "Titulo:", class:"offset-md-2 col-md-3 col-form-label text-right"%>
								<%= form.text_field :title, class:"col-md-4 form-control"%>
							</div>
							<div class="form-group row">
								<%= form.label "Cuerpo:", class:"offset-md-2 col-md-3 col-form-label text-right"%>
								<%= form.text_area :body, class:"col-md-4 form-control"%>
							</div>
							<div class="form-group row">
								<div class="container text-center">
									<%= form.submit "Aceptar", class:"btn btn-success col-md-3" %>
									<%= link_to 'Atras', articles_path, class:"btn btn-info col-md-3" %>
								</div>
								
							</div>
						<% end %>
					</fieldset>
				</form>		
			</div>
		</div>
	</div>
</div>

